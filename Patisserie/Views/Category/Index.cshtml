@model IEnumerable<Patisserie.Models.DB.Category>

@{
    ViewData["Title"] = "Index";
}

<h4>Manage category</h4>
<br />
<p>
    <a class="btn btn-success btn-primary mb-2" asp-action="Create"><i class="fa-sharp fa-solid fa-circle-plus"></i> Create New Category</a>
</p>
<table class="table table-responsive">
    <thead>
        <tr class="table-active">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-info btn-sm button_actions"><i class="fa-regular fa-pen-to-square"></i></a>
                    <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-secondary btn-sm button_actions"><i class="fa-solid fa-circle-info"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm button_actions"><i class="fa-solid fa-trash-can"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
