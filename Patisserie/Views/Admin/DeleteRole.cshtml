@using Microsoft.AspNetCore.Identity
@model IdentityRole

@{
    ViewData["Title"] = "Delete Role";
}

<h3>Delete Role</h3>

<div class="container">
    <hr />

    <input type="hidden" asp-for="Id" />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="DeleteRole" method="post">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" value="@Model.Name" disabled/>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-danger button_submit">Delete</button>
                    <a asp-controller="admin" asp-action="Role" class="btn btn-warning button_submit">Back to list</a>
                </div>
            </form>
        </div>
    </div>
</div>
