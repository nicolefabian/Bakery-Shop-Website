@{
    ViewData["Title"] = "Home Page";
}

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<div id="carouselExampleControls" class="carousel slide mt-2" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/uploads/card1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/uploads/card3.jpeg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/uploads/card2.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!--ABOUT US SECTION-->
<br />
<div class="about-us mt-2">
    <div class="container">
        <p class="siteName">Patisserie</p>
        <p class="siteDesc">At Patisserie Bakery, we are passionate about creating delicious and irresistible baked goods. With a dedication to quality and a love for all things sweet, we strive to bring joy to every customer. From freshly baked bread to mouthwatering pastries and delightful cakes, our skilled bakers craft treats that not only taste amazing but also look beautiful. Whether you're celebrating a special occasion or simply craving a delectable indulgence, we invite you to experience the magic of our bakery. Welcome to Sweet Delights Bakery, where every bite is a delightful adventure.</p>
    </div>
</div>

<br />


<!--CATEGORY TITLE-->
<br />
<div class="category">
    <div class="container">
        <p class="categoryName justify-center text-center"> Our products</p>
    </div>
</div>


<!---CATEGORIES--->

<div class="container mb-5">
    <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border h-100">
                <img src="~/uploads/newCategory.jpg" class="card-img-top" alt="Card Image">
                <div class="card-body">
                    <h4 class="card-title text-center">New</h4>
                    <div class="card-text justify-center">
                        <p>Be among the first to experience our newest and tastiest creations.</p>
                    </div>
                    <div class="text-center">
                        <a asp-controller="Product" asp-action="Index" asp-route-category="New" class="btn btn-primary">Browse</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border h-100">
                <img src="~/uploads/popularCategory.jpg" class="card-img-top" alt="Card Image">
                <div class="card-body">
                    <h4 class="card-title text-center">Popular</h4>
                    <div class="card-text justify-center">
                        <p>Join the countless individuals who have fallen in love with these delightful creations.</p>
                    </div>
                    <div class="text-center">
                        <a asp-controller="Product" asp-action="Index" asp-route-category="Popular" class="btn btn-primary">Browse</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border h-100">
                <img src="~/uploads/specialCategory.jpg" class="card-img-top" alt="Card Image">
                <div class="card-body">
                    <h4 class="card-title text-center">Special</h4>
                    <div class="card-text justify-center">
                        <p>Experience the magic and delight in the unforgettable flavors that await you.</p>
                    </div>
                    <div class="text-center">
                        <a asp-controller="Product" asp-action="Index" asp-route-category="Special" class="btn btn-primary">Browse</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--VISION AND MISSION-->
<div class="row">
    <div class="col-md-6">
        <div class="about-us">
            <div class="container p-5">
                <p class="siteName">Vision</p>
                <p class="siteDesc">To be recognised as the ultimate destination for those seeking the finest and most exquisite pastries and desserts. We aim to create a haven where individuals can indulge in a sensory experience that evokes joy, delight, and pure bliss.</p>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="about-us">
            <div class="container p-5">
                <p class="siteName">Mission</p>
                <p class="siteDesc">To bring happiness to people's lives through our delectable creations. We strive to create unique and memorable experiences for our customer for both special occassions or just a simple treat yourself day.</p>
             </div>  
        </div>
    </div>

</div>


<!--MEMBERSHIP-->
<div class="member m-5">
    <div class="container">
        <p class="memberTitle">Be a member now!</p>
        <p class="text-center" style="color: #666;">Unlock exclusive benefits and discounts by becoming a member of our bakery community.</p>
    </div>
    <div class="text-center">
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">Join now</a>
    </div>
</div>

